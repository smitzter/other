//Practice makes perfect//
var count = 0;
var loop = function(){
	while(count < 3){
		//Your code goes here!
	console.log("I'm looping!")	
	count++
	}
};

loop();

//loop once//
//Remember to make your condition true outside the loop!

var soloLoop = function(){
  //Your code goes here!
    loop = true
	while(loop){
		//Your code goes here!
	console.log("Looped once!")	
	loop = false }
};

soloLoop();
